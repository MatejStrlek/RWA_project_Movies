@model RWA_MVC_project.Models.Video

@{
    ViewData["Title"] = "Details";
    bool isAdmin = HttpContextAccessor.HttpContext.Request.Cookies["username"] == "admin";
}

<h1>Details</h1>

<div>
    <h4>Video</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalSeconds)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalSeconds)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StreamingUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StreamingUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model?.Image.Content" class="card-img-top fixed-image  w-25">
        </dd>
    </dl>

    <h4>Tags:</h4>
    @if (Model.VideoTags.Any()){
        <ul>
            @foreach (var videoTag in Model.VideoTags)
            {
                <li>@videoTag.Tag.Name</li>
            }
        </ul>
    }
    else
    {
        <p>No video tags for this video.</p>
    }
</div>
<div>
@if (isAdmin)
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Delete</a>
    }
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    <a class="btn btn-success" href="@Model?.StreamingUrl" target="_blank">Play</a>
</div>
