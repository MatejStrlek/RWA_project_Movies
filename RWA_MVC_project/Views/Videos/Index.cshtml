@model PagedList.IPagedList<RWA_MVC_project.Models.Video>
@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    bool isAdmin = HttpContextAccessor.HttpContext.Request.Cookies["username"] == "admin";
}

<form asp-controller="Videos" asp-action="Search" method="get">
    <input type="search" name="searchText" placeholder="Search..." />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<br />

@if(isAdmin){
<p>
        <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">        
            <div class="card mb-3">
                <a href="@item.StreamingUrl" target="_blank">
                <img src="@(item.Image?.Content)" class="card-img-top fixed-image" alt="Movie Image">
                </a>
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    @if (isAdmin)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    }
                </div>               
            </div>          
        </div>
    }
</div>

<div class="row">
    <div class="col-md-12">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-controller="Videos" asp-route-page="1" asp-route-pageSize="@(Model.PageSize)">First</a>
                </li>
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-controller="Videos" asp-route-page="@(Model.PageNumber - 1)" asp-route-pageSize="@(Model.PageSize)">Previous</a>
                </li>
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-controller="Videos" asp-route-page="@(i)" asp-route-pageSize="@(Model.PageSize)">@i</a>
                    </li>
                }
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-controller="Videos" asp-route-page="@(Model.PageNumber + 1)" asp-route-pageSize="@(Model.PageSize)">Next</a>
                </li>
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index" asp-controller="Videos" asp-route-page="@Model.PageCount" asp-route-pageSize="@(Model.PageSize)">Last</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<style>
    .fixed-image {
        width: 100%;
        height: auto;
        max-width: 600px;
        max-height: 350px;
    }
</style>

